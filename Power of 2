class Solution:
    def isPowerOfTwo(self, n: int) -> bool:
       
        if n == 0:
            return False
        if n == 1:
            return True    
        if n % 2 == 1:
            return False      
        
        a = str(bin(n))
        for i in range(3,len(a)):
            if a[i] == '1':
                return False
